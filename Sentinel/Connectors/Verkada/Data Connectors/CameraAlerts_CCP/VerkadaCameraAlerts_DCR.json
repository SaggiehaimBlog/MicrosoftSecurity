[
    {
        "name": "VerkadaCameraAlertsDCR",
        "apiVersion": "2022-06-01",
        "type": "Microsoft.Insights/dataCollectionRules",
        "location": "{{location}}",
        "properties": {
            "dataCollectionEndpointId": "{{dataCollectionEndpointId}}",
            "streamDeclarations": {
                "Custom-VerkadaCameraAlerts_CL": {
                    "columns": [
                        {
                            "name": "camera_id",
                            "type": "string"
                        },
                        {
                            "name": "created",
                            "type": "string"
                        },
                        {
                            "name": "crowd_threshold",
                            "type": "int"
                        },
                        {
                            "name": "image_url",
                            "type": "string"
                        },
                        {
                            "name": "notification_type",
                            "type": "string"
                        },
                        {
                            "name": "objects",
                            "type": "dynamic"
                        },
                        {
                            "name": "person_label",
                            "type": "string"
                        },
                        {
                            "name": "video_url",
                            "type": "string"
                        }
                    ]
                }
            },
            "dataSources": {},
            "destinations": {
                "logAnalytics": [
                    {
                        "workspaceResourceId": "[variables('workspaceResourceId')]",
                        "name": "sh-sentinel"
                    }
                ]
            },
            "dataFlows": [
                {
                    "streams": [
                        "Custom-VerkadaCameraAlerts_CL"
                    ],
                    "destinations": [
                        "sh-sentinel"
                    ],
                    "transformKql": "let fromUnixTime = (t: long) {datetime(1970-01-01) + t * 1sec };\nsource\n| extend TimeGenerated = todatetime(fromUnixTime(tolong(created))), camera_id = tostring(camera_id), crowd_threshold = toint(crowd_threshold), image_url = tostring(image_url), notification_type = tostring(notification_type), objects = todynamic(objects), person_label = tostring(person_label), video_url = tostring(video_url)\n| project TimeGenerated, created, camera_id, crowd_threshold, image_url, notification_type, objects, person_label, video_url",
                    "outputStream": "Custom-VerkadaCameraAlerts_CL"
                }
            ]
        }
    }
]